
public class Student extends User{
	
	private int enrolment;
	private String course;
	private short semester;

	public Student(int id, int enrolment) { // Contrutor padr√£o java de uma classe
		super(id);
		this.enrolment = enrolment;
		
	}

	
	public String getCourse() {
		return course;
	}

	public void setCourse(String course) {
		this.course = course;
	}

	public short getSemester() {
		return semester;
	}

	public void setSemester(short semester) {
		this.semester = semester;
	}

	public int getEnrolment() {
		return enrolment;
	}
	
	public String formatPersonalData() {
		String userData = String.format("ID: %d/n Nome: %s/n", getId() , getName());
		
		String studentData = String.format("RA: %s\n Curso: %s\n P: %d", this.enrolment, 
		this.course, this.semester);
		
		return userData + studentData;
	}
	

}
